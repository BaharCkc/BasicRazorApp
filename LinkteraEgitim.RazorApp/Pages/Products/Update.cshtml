@page
@model LinkteraEgitim.RazorApp.Pages.Products.UpdateModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Create Product</h2>
            <hr />
		</div>
		<div asp-validation-summary="All"></div>
		<input hidden asp-for="Product.Id"/>
		<div class="mb-3">
			<label asp-for="@Model.Product.Name"></label>
			<input asp-for="@Model.Product.Name" class="form-control" />
			<span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Product.Stock"></label>
			<input asp-for="@Model.Product.Stock" class="form-control" />
			<span asp-validation-for="@Model.Product.Stock" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
		<a asp-page="Index" class="btn btn-secondary"  style="width:150px;"> Back to List</a>
       
	</div>
	
</form>