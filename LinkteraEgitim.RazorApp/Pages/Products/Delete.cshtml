@page
@model LinkteraEgitim.RazorApp.Pages.Products.DeleteModel

<form method="post">
	<input hidden asp-for="Product.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Product.Name"></label>
			<input asp-for="@Model.Product.Name" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Product.Stock"></label>
			<input asp-for="@Model.Product.Stock" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
		<a asp-page="Index" class="btn btn-secondary"  style="width:150px;"> Back to List</a>
	</div>
	
</form>
